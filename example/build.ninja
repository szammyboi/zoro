rule cc
   command = g++ -m64 -MMD -MP -m64 -std=c++20 $cflags -c $in -o $out -Iinclude -DWINDOWS 
rule link
   command = g++ -o $out $in   -L/usr/lib64 -m64 -s

rule ar
   command = ar rcs $out $in
   description = ar $out

build build/src/Test.o: cc src/Test.cpp
build build/src/App.o: cc src/App.cpp

build build/BasicProject.exe: link build/src/Test.o build/src/App.o 
